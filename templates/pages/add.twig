{% extends "layouts/default.twig" %}

{% block head %}
    <link href="{{ Url_phile('plugins/siezi/phileAdminMarkdownEditor/public/vendor/bootstrap-markdown/bootstrap-markdown.min.css') }}"
          rel="stylesheet">
    <script src="{{ Url_phile('plugins/siezi/phileAdminMarkdownEditor/public/vendor/bootstrap-markdown/bootstrap-markdown.js') }}"></script>
    <script src="{{ Url_phile('plugins/siezi/phileAdminMarkdownEditor/public/vendor/marked/marked.js') }}"></script>
{% endblock %}

{% block breadcrump %}
    <li>
        <a href="{{ Url_backend('pages/') }}">{{ 'siezi.phileAdminPages.title'|trans }}</a>
    </li>
    <li class="active">{{ 'siezi.phileAdminPages.label.addPage'|trans }}</li>
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.title) }}
        <div class="input-group">
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            <div class="input-group-addon">{{ contentExt }}</div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.place) }}
        {{ form_widget(form.place, {'attr': {'class': 'form-control'}}) }}
    </div>
    <input type="submit" name="submit" class="btn btn-primary"
           value="{{ 'siezi.phileAdminPages.label.addPage'|trans }}"/>
    {{ form_end(form) }}
{% endblock %}
