{% extends "layouts/default.twig" %}

{% block breadcrump %}
    <li class="active">{{ 'siezi.phileAdminPages.title'|trans }}</li>
{% endblock %}

{% block head %}
    <link href="{{ Url_phile('plugins/siezi/phileAdminMarkdownEditor/public/vendor/bootstrap-sortable/bootstrap-sortable.css') }}" rel="stylesheet">
    <script src="{{ Url_phile('plugins/siezi/phileAdminMarkdownEditor/public/vendor/bootstrap-sortable/bootstrap-sortable.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="container">
        <table class="table table-hover sortable">
            <thead>
            <th>
                {{ 'siezi.phileAdminPages.label.title'|trans }}
            </th>
            <th>
                {{ 'siezi.phileAdminPages.label.path'|trans }}
            </th>
            <th>
                {{ 'siezi.phileAdminPages.label.date'|trans }}
            </th>
            <th data-defaultsort='disabled'>
                {{ 'siezi.phileAdminPages.label.action'|trans }}
            </th>
            </thead>
            <tbody>
            {% for page in pages %}
                <tr>
                    <td>
                        {{ page.title }}
                    </td>
                    <td>
                        {{ page.folder }}
                    </td>
                    <td style="white-space: nowrap">
                        {{ page.meta.date }}
                    </td>
                    <td style="white-space: nowrap">
                        <a href="{{ Url_backend('pages/edit/' ~ page.pageId) }}"
                           class="btn btn-primary btn-xs">
                            {{ 'siezi.phileAdminPages.btn.edit'|trans }}
                        </a>
                        <a href="{{ Url_phile(page.url) }}"
                           class="btn btn-default btn-xs"
                           target="_blank">
                            {{ 'siezi.phileAdminPages.btn.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
